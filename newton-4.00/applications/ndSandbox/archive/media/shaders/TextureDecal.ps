//#version 120
#version 450 core

uniform sampler2D texture0;

in vec2 uv;
out vec4 pixelColor;

void main()
{
	// check if the shader is been called
	//vec4 color = vec4 (1.0, 0.0, 0.0, 1.0);

	vec4 color = texture(texture0, uv);
	pixelColor = color;
}

